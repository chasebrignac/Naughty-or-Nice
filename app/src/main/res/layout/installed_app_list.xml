        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true" />

</RelativeLayout>